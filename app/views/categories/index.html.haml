.page-header
  %h1= 'Categories'
  .header-actions
    %a{href: new_category_path, class: 'button small'}= 'New category'

#searchable-categories.searchable
  %input{type: 'text', class: 'search', placeholder: 'Search'}
  %table
    %thead
      %tr
        %td.sort{'data-sort' => 'category-name'}= 'Title'
        %td= 'Actions'
      %tbody.list
        - @categories.each do |category|
          %tr
            %td
              = link_to category.name, category_path(category)
            %td.actions
              = link_to edit_category_path(category) do
                %i.fa.fa-edit
              = link_to category_path(category), method: :delete, data: {confirm: "You sure?"} do
                %i.fa.fa-trash-o
