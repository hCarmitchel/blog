.row
  .large-12
    .page-header
      %h1= @post.title
      %ul.button-group.header-actions
        %li
          %a{href: edit_post_path(@post), class: 'button small'}= 'Edit'
        %li
          %a{href: post_path(@post), method: :delete, data: {confirm: "You sure?"}, class: 'button small alert'}= 'Delete'
    %div.page-body
      %p= @post.body
